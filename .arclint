{
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename"
    },
    "generated": {
      "type": "generated"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "jsonlint": {
      "type": "jsonlint",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "php": {
      "type": "php",
      "include": [
        "(\\.php$)"
      ]
    },
    "spelling": {
      "type": "spelling",
      "exclude": "(^resources/spelling/.*\\.json$)"
    },
    "text": {
      "type": "text",
      "severity": {
        "2": "disabled",
        "3": "disabled",
        "5": "disabled"
      },
      "exclude": [
        "(^gdb/gdbrc$)",
        "(^xchat/xchat.conf$)",
        "(^mplayer/mencoder.conf$)"
      ]
    },
    "xml": {
      "type": "xml",
      "include": "(\\.xml$)"
    }
  },
  "exclude": [
  ]
}
